<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".tabs.TabCreateSmileFragment">
    <data>
        <variable
            name="viewModel"
            type="com.diary.createnote.CreateNoteViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_dark_background"
            >
            <ImageButton
                android:id="@+id/em1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/EmojiButtonHeight"
                android:src="@drawable/em1"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:padding="10dp"
                android:contentDescription="@string/emoji_button"
                android:accessibilityLiveRegion="polite"
                />
            <ImageButton
                android:id="@+id/em2"
                android:layout_height="@dimen/EmojiButtonHeight"
                android:layout_width="match_parent"
                android:src="@drawable/em2"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:contentDescription="@string/emoji_button"
                android:accessibilityLiveRegion="polite"
                />
            <ImageButton
                android:id="@+id/em3"
                android:layout_height="@dimen/EmojiButtonHeight"
                android:layout_width="match_parent"
                android:src="@drawable/em3"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:contentDescription="@string/emoji_button"
                android:accessibilityLiveRegion="polite"
                />
            <ImageButton
                android:id="@+id/em4"
                android:layout_height="@dimen/EmojiButtonHeight"
                android:layout_width="match_parent"
                android:src="@drawable/em4"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:contentDescription="@string/emoji_button"
                android:accessibilityLiveRegion="polite"
                />
            <ImageButton
                android:id="@+id/em5"
                android:layout_height="@dimen/EmojiButtonHeight"
                android:layout_width="match_parent"
                android:src="@drawable/em5"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:contentDescription="@string/emoji_button"
                android:accessibilityLiveRegion="polite"
                />


        </LinearLayout>
    </ScrollView>
</layout>
